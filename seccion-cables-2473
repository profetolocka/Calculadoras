            font-weight: bold;
        }

        .superindice {
            vertical-align: super;
            font-size: smaller;
        }

        .reiniciar-button {
            background-color: #0453F1;
            color: white;
            padding: 10px;
            border: none;
            cursor: pointer;
            width: 48%;
            box-sizing: border-box;
        }

        .reiniciar-button:hover {
            background-color: #023eab;
        }
    </style>
